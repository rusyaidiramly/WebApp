@page
@model IndexModel
@using WebApp.Models
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Return To Monke</h1>
    <p>I assume you are human. Is it really worth it?</p>
</div>



<ul class="d-flex flex-wrap no-bullets" style="gap: .8rem;">
@foreach (Monkey monke in Model.Monkeys)
{
    <li id="monke-img" class="flex-grow-1" style="height: 37vh;">
        <img src="@monke.ImageUrl" alt="@monke.Name" class="mh-100"
        style="min-width: 100%; object-fit: cover; object-position: 0% 10%; vertical-align: bottom;">
        <div class="monkey-name">@monke.Name</div>
    </li>
}
</ul>